<Window x:Class="BLP_model.Access_Matrix_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BLP_model"
        mc:Ignorable="d"
        Title="Матрица доступа" Height="300" Width="300" Loaded="Window_Loaded" MinWidth="200" MinHeight="200">
    <Grid>
        <Button x:Name="Refresh_button" Content="Обновить" FontSize="14" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Refresh_button_Click"/>
        <DataGrid x:Name="Access_matrix_datagrid" Margin="0,0,0,40" FontSize="14" Focusable="False" IsEnabled="False"/>
    </Grid>
</Window>
